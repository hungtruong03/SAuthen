generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id            Int       @id @default(autoincrement())
  username      String    @unique
  password      String
  refreshToken  String?
  createdDate   DateTime  @default(now())
  role          Role
  user          User?     @relation("UserAccount")
  partner       Partner?  @relation("PartnerAccount")
}

model User {
  id            Int       @id @default(autoincrement())
  accountId     Int       @unique
  firstName     String
  lastName      String
  avatar        String?
  phone         String    @unique
  email         String    @unique
  facebook      String?
  account       Account   @relation("UserAccount", fields: [accountId], references: [id])
  friends       User[]    @relation("UserFriends")
  friendOf      User[]    @relation("UserFriends")
}

model Partner {
  id            Int       @id @default(autoincrement())
  accountId     Int       @unique
  companyName   String
  avatar        String?
  field         String?
  address       String
  gpsLat        Float
  gpsLong       Float
  status        String
  account       Account   @relation("PartnerAccount", fields: [accountId], references: [id])
}

enum Role {
  USER
  ADMIN
  PARTNER
}